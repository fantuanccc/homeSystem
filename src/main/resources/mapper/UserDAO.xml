<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hua.furnitureManagement.dao.UserDAO">

    <insert id="register" useGeneratedKeys="true" keyProperty="id" parameterType="com.hua.furnitureManagement.pojo.entry.UserDO">
        insert into user (gmt_create, gmt_modified, username, password, is_owner, is_deleted, address_id, phone_number)
        values (now(), now(), #{username}, #{password}, #{isOwner}, 0, #{addressId}, #{phoneNumber})
    </insert>

    <update id="edit">
        update user
        <set>
            gmt_modified = now(),
            <if test="username!= null and username!= ''">
                username = #{username},
            </if>
            <if test="password!= null and password!= ''">
                password = #{password},
            </if>
            <if test="isOwner!= null">
                is_owner = #{isOwner},
            </if>
            <if test="addressId!= null">
                address_id = #{addressId},
            </if>
            <if test="phoneNumber!= null and phoneNumber!= ''">
                phone_number = #{phoneNumber},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="login" resultType="com.hua.furnitureManagement.pojo.entry.UserDO">
            select * from user where is_deleted = 0
            <if test="username!= null and username!= ''">
                and username = #{username}
            </if>
    </select>

    <select id="selectAddressByID" resultType="java.lang.Long">
        select address_id from user where id = #{id}
    </select>

    <select id="getUserInfo" resultType="com.hua.furnitureManagement.pojo.entry.UserDO">
        select * from user where id = #{id}
    </select>

</mapper>